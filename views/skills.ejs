<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Skills & Expertise of Asadullah Hil Galib - AI, Machine Learning, Python, TensorFlow, Web Development, and more.">
  <meta name="keywords" content="Skills, AI, Machine Learning, Python, TensorFlow, Web Development, Technical Expertise">
  <meta name="author" content="Asadullah Hil Galib">

  <title><%= title %></title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/components.css">
  <link rel="stylesheet" href="/css/pages.css">
  <link rel="stylesheet" href="/css/responsive.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

  <!-- AOS Animation -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">

  <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>

<body>
  <%- include('partials/navbar') %>

  <main class="main-content">

    <section class="skills-hero">
      <div class="container">
        <div class="hero-content" data-aos="fade-up">
          <h1 class="page-title">Skills & Expertise</h1>
          <p class="page-subtitle">
            A comprehensive overview of my technical skills, certifications, and areas of expertise in AI, machine learning, and web development
          </p>
        </div>
      </div>
    </section>

    <section class="skills-content">
      <div class="container">
        <!-- Skills Categories -->
        <div class="skills-categories">
          <% skillCategories.forEach((category, categoryIndex) => { %>
          <div class="skill-category" data-aos="fade-up" data-aos-delay="<%= categoryIndex * 100 %>">
            <div class="category-header">
              <div class="category-icon"><%= category.icon %></div>
              <h2 class="category-title"><%= category.category %></h2>
            </div>

            <div class="skills-grid">
              <% category.skills.forEach((skill, skillIndex) => { %>
              <div class="skill-item" data-aos="fade-up" data-aos-delay="<%= 100 + (skillIndex * 50) %>">
                <div class="skill-info">
                  <h3 class="skill-name"><%= skill.name %></h3>
                  <span class="skill-percentage"><%= skill.level %>%</span>
                </div>
                <div class="skill-bar-container">
                  <div class="skill-bar" data-progress="<%= skill.level %>">
                    <div class="skill-fill"></div>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
          <% }) %>
        </div>

        <!-- Certifications Section -->
        <div class="certifications-section" data-aos="fade-up" data-aos-delay="400">
          <h2 class="section-title">Certifications & Courses</h2>
          <div class="certifications-grid">
            <% certifications.forEach((cert, index) => { %>
            <div class="certification-card" data-aos="fade-up" data-aos-delay="<%= 100 + (index * 100) %>">
              <div class="cert-icon">
                <i class="fas fa-certificate"></i>
              </div>
              <div class="cert-content">
                <h3 class="cert-name"><%= cert.name %></h3>
                <div class="cert-provider"><%= cert.provider %></div>
                <div class="cert-meta">
                  <span class="cert-year"><%= cert.year %></span>
                  <span class="cert-id">ID: <%= cert.credentialId %></span>
                </div>
              </div>
              <div class="cert-badge">
                <i class="fas fa-award"></i>
              </div>
            </div>
            <% }) %>
          </div>
        </div>

        <!-- Skills Matrix -->
        <div class="skills-matrix" data-aos="fade-up" data-aos-delay="500">
          <h2 class="section-title">Technical Proficiency Matrix</h2>
          <div class="matrix-container">
            <div class="matrix-grid">
              <div class="matrix-header">
                <div class="matrix-cell">Technology</div>
                <div class="matrix-cell">Beginner</div>
                <div class="matrix-cell">Intermediate</div>
                <div class="matrix-cell">Advanced</div>
                <div class="matrix-cell">Expert</div>
              </div>

              <% 
                    const allSkills = skillCategories.flatMap(cat => cat.skills);
                    const topSkills = allSkills.sort((a, b) => b.level - a.level).slice(0, 8);
                    %>

              <% topSkills.forEach((skill, index) => { %>
              <div class="matrix-row" data-aos="fade-up" data-aos-delay="<%= 50 + (index * 50) %>">
                <div class="matrix-cell skill-name-cell"><%= skill.name %></div>
                <div class="matrix-cell level-cell">
                  <div class="level-indicator <%= skill.level >= 25 ? 'active' : '' %>"></div>
                </div>
                <div class="matrix-cell level-cell">
                  <div class="level-indicator <%= skill.level >= 50 ? 'active' : '' %>"></div>
                </div>
                <div class="matrix-cell level-cell">
                  <div class="level-indicator <%= skill.level >= 75 ? 'active' : '' %>"></div>
                </div>
                <div class="matrix-cell level-cell">
                  <div class="level-indicator <%= skill.level >= 90 ? 'active' : '' %>"></div>
                </div>
              </div>
              <% }) %>
            </div>
          </div>
        </div>

        <!-- What I Do Section -->
        <div class="what-i-do-section" data-aos="fade-up" data-aos-delay="600">
          <h2 class="section-title">What I Do</h2>
          <div class="services-grid">
            <div class="service-card" data-aos="zoom-in" data-aos-delay="100">
              <div class="service-icon">
                <i class="fas fa-brain"></i>
              </div>
              <h3 class="service-title">AI & Machine Learning</h3>
              <p class="service-description">
                Developing intelligent systems using TensorFlow, PyTorch, and advanced deep learning techniques for real-world applications.
              </p>
              <ul class="service-features">
                <li>Computer Vision Applications</li>
                <li>Natural Language Processing</li>
                <li>Predictive Analytics</li>
                <li>Model Optimization & Deployment</li>
              </ul>
            </div>

            <div class="service-card" data-aos="zoom-in" data-aos-delay="200">
              <div class="service-icon">
                <i class="fas fa-code"></i>
              </div>
              <h3 class="service-title">Full-Stack Development</h3>
              <p class="service-description">
                Building scalable web applications with modern frameworks and technologies, from concept to deployment.
              </p>
              <ul class="service-features">
                <li>React & Node.js Applications</li>
                <li>API Design & Development</li>
                <li>Database Architecture</li>
                <li>Cloud Integration</li>
              </ul>
            </div>

            <div class="service-card" data-aos="zoom-in" data-aos-delay="300">
              <div class="service-icon">
                <i class="fas fa-mobile-alt"></i>
              </div>
              <h3 class="service-title">Mobile & Edge AI</h3>
              <p class="service-description">
                Creating intelligent mobile applications with on-device AI capabilities for enhanced performance and privacy.
              </p>
              <ul class="service-features">
                <li>TensorFlow Lite Optimization</li>
                <li>Cross-Platform Development</li>
                <li>Real-time Processing</li>
                <li>Edge Computing Solutions</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

  <%- include('partials/footer') %>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script src="/js/animations.js"></script>
  <script src="/js/skills.js"></script>

  <!-- AOS Animation -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
  <script>
    AOS.init({
      duration: 800,
      easing: 'ease-in-out',
      once: true
    });
  </script>
</body>

</html>