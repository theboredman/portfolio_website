<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="About Asadullah Hil Galib - AI & Machine Learning Developer with expertise in Python, TensorFlow, and intelligent system development.">
  <meta name="keywords" content="About, AI Developer, Machine Learning, Python, TensorFlow, Portfolio">
  <meta name="author" content="Asadullah Hil Galib">

  <title><%= title %></title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Stylesheets -->
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/components.css">
  <link rel="stylesheet" href="/css/pages.css">
  <link rel="stylesheet" href="/css/responsive.css">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

  <!-- AOS Animation -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">

  <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>

<body>
  <%- include('partials/navbar') %>

  <main class="main-content">

    <section class="about-hero">
      <div class="container">
        <div class="about-hero-content">
          <div class="about-text" data-aos="fade-right">
            <h1 class="page-title">About Me</h1>
            <p class="page-subtitle">
              Passionate AI developer with a vision for intelligent, scalable solutions
            </p>
          </div>
          <div class="about-image" data-aos="fade-left">
            <div class="image-container">
              <img src="https://images.pexels.com/photos/3184338/pexels-photo-3184338.jpeg?auto=compress&cs=tinysrgb&w=600" alt="<%= profile.name %>" class="profile-image">
              <div class="image-decoration"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="about-content">
      <div class="container">
        <!-- Bio Section -->
        <div class="bio-section" data-aos="fade-up">
          <div class="bio-content">
            <h2 class="bio-title">My Journey</h2>
            <div class="bio-text">
              <%- profile.bio.split('\n\n').map(paragraph => `<p>${paragraph.replace(/\n/g, '<br>')}</p>`).join('') %>
            </div>
          </div>
        </div>

        <!-- Stats Section -->
        <div class="stats-section" data-aos="fade-up" data-aos-delay="100">
          <div class="stats-grid">
            <% profile.stats.forEach((stat, index) => { %>
            <div class="stat-card" data-aos="zoom-in" data-aos-delay="<%= 100 + (index * 100) %>">
              <div class="stat-number counter" data-target="<%= stat.value.replace('+', '') %>">0</div>
              <div class="stat-label"><%= stat.label %></div>
            </div>
            <% }) %>
          </div>
        </div>

        <!-- Education Section -->
        <div class="education-section" data-aos="fade-up" data-aos-delay="200">
          <h2 class="section-title">Education</h2>
          <div class="timeline">
            <% education.forEach((edu, index) => { %>
            <div class="timeline-item" data-aos="fade-up" data-aos-delay="<%= 100 + (index * 100) %>">
              <div class="timeline-marker"></div>
              <div class="timeline-content">
                <div class="timeline-period"><%= edu.period %></div>
                <h3 class="timeline-title"><%= edu.degree %></h3>
                <h4 class="timeline-subtitle"><%= edu.institution %></h4>
                <p class="timeline-description"><%= edu.description %></p>
              </div>
            </div>
            <% }) %>
          </div>
        </div>

        <!-- Experience Section -->
        <div class="experience-section" data-aos="fade-up" data-aos-delay="300">
          <h2 class="section-title">Professional Experience</h2>
          <div class="experience-grid">
            <% experience.forEach((exp, index) => { %>
            <div class="experience-card" data-aos="fade-up" data-aos-delay="<%= 100 + (index * 100) %>">
              <div class="experience-header">
                <h3 class="experience-role"><%= exp.role %></h3>
                <div class="experience-company"><%= exp.company %></div>
                <div class="experience-meta">
                  <span class="experience-period"><%= exp.period %></span>
                  <span class="experience-location"><%= exp.location %></span>
                </div>
              </div>
              <div class="experience-description">
                <%= exp.description %>
              </div>
            </div>
            <% }) %>
          </div>
        </div>

        <!-- CTA Section -->
        <div class="about-cta" data-aos="fade-up" data-aos-delay="400">
          <div class="cta-card">
            <h3 class="cta-title">Let's Work Together</h3>
            <p class="cta-description">
              I'm always open to discussing new opportunities and innovative projects.
              Let's create something amazing together!
            </p>
            <div class="cta-actions">
              <a href="/contact" class="btn btn-primary">
                <span>Get In Touch</span>
                <i class="fas fa-arrow-right"></i>
              </a>
              <a href="/projects" class="btn btn-outline">
                <span>View Projects</span>
                <i class="fas fa-external-link-alt"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

  <%- include('partials/footer') %>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script src="/js/animations.js"></script>

  <!-- AOS Animation -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
  <script>
    AOS.init({
      duration: 800,
      easing: 'ease-in-out',
      once: true
    });
  </script>
</body>

</html>